<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    <%- include('partials/app-name.ejs'); %>
                </div>
                <div class="clearfix"></div>
                <%- include('partials/menu-profile.ejs'); %>
                <br>
                <%- include('partials/nav.ejs'); %>
                <%- include('partials/sidebar-footer.ejs'); %>
            </div>
        </div>
        <%- include('partials/top-nav.ejs'); %>
        <div class="right_col" role="main">
            <div class="">

                <div class="page-title">
                    <div class="title_left">
                        <h3> Delete User</h3>
                    </div>
                    <div class="title_right"></div>
                </div>

                <div class="clearfix"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h3 id="user-name" style="color: red"><em><strong>Deleting the record is permanent.  It cannot be reversed.</strong></em></h3>
                                <ul class="nav navbar-right"></ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div id="message"></div>
                                <p class="loading"><strong><em>Loading...</em></strong></p>
                                <div class="row" id="user-details">
                                    <form id="user-delete-form">
                                        <input type="hidden" id="id" name="id">
                                        <div class="form-group">
                                            <label for="du_id">DU ID:</label>
                                            <input type="text" class="form-control" id="du_id" name="du_id" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email Address:</label>
                                            <input type="email" class="form-control" id="email" name="email" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="first_name">First Name:</label>
                                            <input type="text" class="form-control" id="first_name" name="first_name" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="last_name">Last Name:</label>
                                            <input type="text" class="form-control" id="last_name" name="last_name" disabled>
                                        </div>
                                        <br>
                                        <br>
                                        <button type="button" onclick="userModule.deleteUser();" class="btn btn-danger"><i class="fa fa-trash"></i>&nbsp; Delete</button>
                                        &nbsp;&nbsp;
                                        <a href="/dashboard/users" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp; Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer.ejs'); %>
    </div>
