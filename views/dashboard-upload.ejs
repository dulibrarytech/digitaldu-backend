<%- include('partials/header.ejs'); %>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    <%- include('partials/app-name.ejs'); %>
                </div>
                <div class="clearfix"></div>
                <%- include('partials/menu-profile.ejs'); %>
                <br>
                <%- include('partials/nav.ejs'); %>
                <%- include('partials/sidebar-footer.ejs'); %>
            </div>
        </div>
        <%- include('partials/top-nav.ejs'); %>
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3> Thumbnail Upload <span id="object-type"></span></h3>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2 id="collection-name"></h2>
                                <ul class="nav navbar-right">
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <% if (error === true) { %>
                                <div id="message" class="alert alert-danger"><%= message %></div>
                                <% } else if (error === false) { %>
                                <div id="message" class="alert alert-success"><%= message %></div>
                                <% } else { %>
                                    <div id="message"></div>
                                <% } %>
                                <form id="collection-thumbnail-upload-form" action="/repo/tn/upload"
                                      enctype="multipart/form-data" method="POST">
                                    <p style="background-color:#4DA5DF;color:#FFF;width:320px;padding:3px;">*Upload .jpg
                                        files only and file must be under 500kb</p>
                                    <span id="sip-uuid-input"></span>
                                    <div class="form-group">
                                        <input id="file" type="file" name="tn" accept="image/jpeg" required
                                               onchange="helperModule.checkFileSize()"/>
                                    </div>
                                    <br>
                                    <button id="upload-button" class="btn btn-primary" type="submit"><i
                                                class="fa fa-upload"></i> Upload
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer.ejs'); %>
    </div>
    <script src="../../../libs/jquery/dist/jquery.min.js"></script>
    <script src="../../../libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../../../libs/nprogress/nprogress.js"></script>
    <script src="../../../libs/validator/jquery.validate.js"></script>
    <script src="../../../libs/dompurify/purify.min.js"></script>
    <script src="../../../assets/js/theme_sidebar.js"></script>
    <script src="../../../app/dom.module.js"></script>
    <script src="../../../app/config.module.js"></script>
    <script src="../../../app/api.module.js"></script>
    <script src="../../../app/helper.module.js"></script>
    <script src="../../../app/http.module.js"></script>
    <script src="../../../app/user.module.js"></script>
    <script src="../../../app/collections.module.js"></script>
    <script>
        collectionsModule.setCollectionInformation();
        collectionsModule.collectionUploadSuccess();
    </script>
</body>
</html>