        <div class="right_col" role="main">
            <div class="">

                <div class="page-title">
                    <div class="title_left">
                        <!--<h3> Media Gallery <small> gallery design</small> </h3>-->
                    </div>

                    <div class="title_right">
                        <% include partials/search.ejs %>
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Edit Collection</h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <div class="row" id="edit-collection"><!-- community edit form is rendered here -->

                                    <div id="message"></div>
                                    <br />

                                    <form id="collection-form" class="form-horizontal form-label-left" novalidate>

                                        <input id="id" name="id" type="hidden">
                                        <input id="pid" name="pid" type="hidden">

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Title <span class="required">*</span></label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <input id="title" name="title" type="text" class="form-control" placeholder="" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Description</label>
                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <textarea id="description" class="form-control" rows="3" placeholder=""></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                                <br>
                                                <small class="text-navy"></small>
                                            </label>

                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                <div class="checkbox">
                                                    <label>
                                                        <input id="is_active" name="is_active" type="checkbox"> Active
                                                    </label>
                                                </div>
                                                <div class="checkbox">
                                                    <label>
                                                        <input id="is_published" name="is_published" type="checkbox"> Published
                                                    </label>
                                                </div>
                                            </div>
                                            <br><br><br><br>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Thumbnail</label>
                                                <div class="col-md-9 col-sm-9 col-xs-12">
                                                    <div id="collection-tn"></div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="ln_solid"></div>
                                        <div class="form-group">
                                            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                                <a href="/dashboard/collections" class="btn btn-default"><i class="fa fa-ban"></i>&nbsp;Cancel</a>
                                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp; Save</button>
                                            </div>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end row -->
            </div>
        </div>
